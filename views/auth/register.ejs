<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/CSS/register.css">

        <section class="vh-100 mb-5" >
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-6 text-black">
        
                <div class="px-5 ms-xl-4">
                
                  <span class="h1 fw-bold mb-0">Tcamp</span>
                </div>
        
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
        
                  <form action="/register" class="validation-form" novalidate method="POST">
        
                    <h3 class="fw-normal mb-3 pb-3">Register</h3>
                    
        
                    <div class="form-outline mb-4">
                      <input type="text" id="username" class="form-control form-control-lg" name="username" autofocus required/>
                      <label class="form-label" for="username">Username</label>
                      <div class="invalid-feedback">
                        Please enter the username.
                      </div>
                    </div>
        
                    <div class="form-outline mb-4">
                      <input type="email" id="email" class="form-control form-control-lg" name="email" required/>
                      <label class="form-label" for="email">Email</label>
                      <div class="invalid-feedback">
                        Please enter the email.
                      </div>
                    </div>


                    <div class="form-outline mb-4">
                      <input type="password" id="password" class="form-control form-control-lg" name="password" required/>
                      <label class="form-label" for="password">Password</label>
                      <div class="invalid-feedback">
                        Please enter the password.
                      </div>
                    </div>
        
                    <div class="pt-1 mb-4">
                      <button class="btn btn-info w-100">Sign up</button>
                    </div>
                  </form>
                </div>
                    <p>Have an account? <a href="/login" class="link-info">Sign in here</a></p>
        
                  
        
                
        
              </div>
              <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://images.unsplash.com/photo-1571687949921-1306bfb24b72?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
                  alt="Login image" class="vh-100 w-100">
              </div>
            </div>
          </div>
        </section>










        

    </form>