<% layout('layouts/boilerplate') %> 
    <h1 class="mb-3">All the Campgrounds</h1>
    
    



        <% for ( let c of campGrounds){%> 
            <div class="card" mb-3>
              <div class="row">
                <div class="col-md-4">
                    <img src="<%= c.images[0].url %> " alt="" class="img-fluid">
                </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= c.title %> </h5>
                            <p class="text-card"> <%= c.description %> </p>
                            <p class="text-card">
                                 <small class="text-muted">
                                    <%= c.location %> 
                                 </small>
                             </p>
                            <a href="/campgrounds/<%= c._id %> "class="btn btn-primary">View Campground</a>
                            
                        </div>
                    </div>
              </div>
            </div>
        <%  }%> 




